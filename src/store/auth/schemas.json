{
  "signIn": {
    "schema": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "Email Address"
        },
        "password": {
          "type": "string",
          "title": "Password"
        }
      },
      "required": [
        "email",
        "password"
      ]
    },
    "uiSchema": {
      "password": {
        "ui:widget": "password",
        "ui:placeholder": "Password"
      },
      "email": {
        "ui:placeholder": "Email Address"
      }
    }
  },
  "signUp": {
    "schema": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "Email Address",
          "description": "Note: all attendees are required to prove current undergraduate or graduate status to attend TreeHacks."
        },
        "password": {
          "type": "string",
          "title": "Password",
          "description": "Password needs to have at least 8 characters, a number, and an uppercase and a lowercase letter."
        },
        "password2": {
          "type": "string",
          "title": "Re-enter password"
        },
        "location": {
          "type": "string",
          "title": "Where are you coming from?",
          "enum": ["Outside US", "AL", "AK", "AZ", "AR", "CA", "CO", "CT", "DE", "DC", "FL", "GA", "HI", "ID", "IL", "IN", "IA", "KS", "KY", "LA", "ME", "MT", "NE", "NV", "NH", "NJ", "NM", "NY", "NC", "ND", "OH", "OK", "OR", "MD", "MA", "MI", "MN", "MS", "MO", "PA", "RI", "SC", "SD", "TN", "TX", "UT", "VT", "VA", "WA", "WV", "WI", "WY", "US Territories"]
        }
      },
      "required": [
        "email",
        "password",
        "password2",
        "location"
      ]
    },
    "uiSchema": {
      "password": {
        "ui:widget": "password",
        "ui:placeholder": "Password"
      },
      "password2": {
        "ui:widget": "password",
        "ui:placeholder": "Confirm Password"
      },
      "email": {
        "ui:placeholder": "Email Address"
      },
      "location": {
        "ui:placeholder": "Location"
      }
    }
  },
  "forgotPassword": {
    "schema": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "Email Address"
        }
      },
      "required": [
        "email"
      ]
    },
    "uiSchema": {
      "email": {
        "ui:placeholder": "Email Address"
      }
    }
  },
  "forgotPasswordSubmit": {
    "schema": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "title": "Email Address"
        },
        "code": {
          "type": "string",
          "title": "Code"
        },
        "password": {
          "type": "string",
          "title": "New password"
        },
        "password2": {
          "type": "string",
          "title": "Confirm new password"
        }
      },
      "required": [
        "email",
        "code",
        "password",
        "password2"
      ]
    },
    "uiSchema": {
      "password": {
        "ui:widget": "password",
        "ui:placeholder": "Password"
      },
      "password2": {
        "ui:widget": "password",
        "ui:placeholder": "Confirm Password"
      }
    }
  }
}
